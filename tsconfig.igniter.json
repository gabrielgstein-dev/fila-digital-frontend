{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/igniter",
    "rootDir": "./src/igniter",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/igniter/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
